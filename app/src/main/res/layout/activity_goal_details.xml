<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="goalDetail"
            type="com.eroom.erooja.feature.goalDetail.GoalDetailActivity" />
    </data>

<ScrollView
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/goal_details_parent_layout"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:padding="@dimen/dimen_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey7"
                android:textSize="@dimen/dimen_18sp"
                android:textStyle="bold"
                android:text="포트폴리오 진행하기" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_13dp"
                android:layout_marginBottom="@dimen/dimen_13dp"
                android:fontFamily="sans-serif"
                android:textColor="#9e9e9e"
                android:textSize="@dimen/dimen_10sp"
                android:textStyle="normal"
                android:text="2020.03.05~03.07" />
        </LinearLayout>


        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandable_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="1000"
            app:el_expanded="true"
            app:el_parallax="0.5">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_85dp">

                <TextView
                    android:id="@+id/goal_desc"
                    android:text="@string/temp_txt"
                    android:lineSpacingExtra="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_85dp"
                    android:orientation="vertical" />

                <View
                    android:id="@+id/gradient_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_gradient" />

                <TextView
                    android:id="@+id/more_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:onClick="@{goalDetail::moreClick}"
                    android:text="더보기"
                    android:textColor="@color/grey5" />
            </FrameLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expandable_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_14dp"
                android:layout_marginBottom="@dimen/dimen_14dp"
                android:textColor="@color/grey7"
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="bold"
                android:text="참여자 목록" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/other_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toBottomOf="@+id/linearLayout3">
        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/add_list_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:background="@drawable/ic_btn_floating_creategoal"
            bind:layout_constraintTop_toBottomOf="@+id/other_recyclerview"
            android:text="@string/add_goal_list"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/colorWhite"
            tools:layout_editor_absoluteX="16dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>