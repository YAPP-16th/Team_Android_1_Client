<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="goalDetail"
            type="com.eroom.erooja.feature.goalDetail.GoalDetailActivity" />
    </data>

<ScrollView
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/goal_details_parent_layout"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:padding="@dimen/dimen_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="포트폴리오 진행하기"
                android:textColor="@color/grey7"
                android:textSize="@dimen/dimen_18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_13dp"
                android:layout_marginBottom="@dimen/dimen_13dp"
                android:fontFamily="sans-serif"
                android:text="2020.03.05~03.07"
                android:textColor="#9e9e9e"
                android:textSize="@dimen/dimen_10sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goal_desc_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <include
                layout="@layout/include_goal_desc"
                tools:layout_editor_absoluteX="16dp"
                bind:goalDetail="@{goalDetail}"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="참여자 목록"
            android:textColor="@color/grey7"
            android:textSize="@dimen/dimen_14sp"
            android:paddingTop="@dimen/dimen_14dp"
            android:paddingBottom="@dimen/dimen_14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goal_desc_layout" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/others_recyclerview"
            android:onClick="@{goalDetail::othersDetailClick}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toBottomOf="@+id/textView2"/>

        <Button
            android:id="@+id/add_list_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:background="@drawable/ic_btn_floating_creategoal"
            bind:layout_constraintTop_toBottomOf="@+id/others_recyclerview"
            android:text="@string/add_goal_list"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/colorWhite"
            tools:layout_editor_absoluteX="16dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>