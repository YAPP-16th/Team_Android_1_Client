<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".feature.addGoal.newGoalPage.GoalListFragment">

    <data>

        <variable
            name="fragment"
            type="com.eroom.erooja.feature.addGoal.newGoalPage.GoalListFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/goal_period_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:lineSpacingExtra="11sp"
            android:paddingStart="20dp"
            android:paddingBottom="24dp"
            android:paddingTop="24dp"
            android:text="@string/goal_list_title"
            android:textColor="@color/grey7"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.216"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goal_period_title"
            app:layout_constraintVertical_bias="0.0">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:scrollbarThumbVertical="@color/orgDefault"
                tools:layout_editor_absoluteX="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="6dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/goalListRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:itemCount="5"
                        tools:layout_editor_absoluteX="0dp"
                        tools:listitem="@layout/item_goal_list" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp">

                        <EditText
                            android:id="@+id/goal_content_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/goal_list_item_editttext"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:hint="@string/goal_item_hint"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingStart="40dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/grey7"
                            android:textCursorDrawable="@drawable/goal_list_edit_text_cursor"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/goal_dot"
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/goal_list_dot_inactivate" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/goal_list_size_error_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="0dp"
                        android:text="@string/goal_list_size_error"
                        android:textColor="@color/colorError"
                        android:visibility="invisible" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <View
                android:id="@+id/blur_view"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/view_gradient_alpha_to_white"
                android:visibility="invisible" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>