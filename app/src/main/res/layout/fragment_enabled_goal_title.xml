<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="fragment"
            type="com.eroom.erooja.feature.addDirectList.addMyTodoListFrame.EnabledGoalTitleFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.addGoal.newGoalPage.GoalTitleFragment"
        android:onClick="@{() -> fragment.onLayoutClicked()}">

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="11sp"
            android:text="@string/newGoal_title"
            android:textColor="@color/grey5"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.06"
            />

        <EditText
            android:id="@+id/goalTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="55dp"
            android:focusableInTouchMode="false"
            android:maxLength="50"
            android:paddingBottom="20dp"
            android:textColor="@color/grey4"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            android:textSize="16sp"
            android:singleLine="true"
            android:lines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.566"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question" />


        <TextView
            android:id="@+id/goal_title_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/grey4"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/goalTitle"
            app:layout_constraintTop_toBottomOf="@+id/goalTitle"
            tools:text="0/50" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>