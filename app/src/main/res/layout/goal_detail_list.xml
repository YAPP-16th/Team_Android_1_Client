<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_18sp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/usrList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:textStyle="bold"
            android:text="김채원의 리스트"/>
        <TextView
            android:id="@+id/putinNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100명이 담아감"/>

        <TextView
            android:id="@+id/goal_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="40% 달성"
            android:textColor="@color/orgDefault" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/grey3"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:orientation="vertical">
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/view_gradient" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_150dp"
            android:id="@+id/goalDetailList">

        </androidx.recyclerview.widget.RecyclerView>
    </FrameLayout>

</LinearLayout>